<!DOCTYPE html>
<html>
  <head>
    <title>KeepflixRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <h1><a href="/">KeepFlix</a></h1>
      <h2>Your Personal Movie Library</h2>

        <% if flash[:error] %>
          <h3 style="color:red;"><%= flash[:error] %></h3>
        <% end %>
        <% if flash[:message] %>
          <h3 style="color:green;"><%= flash[:message] %></h3>
        <% end %>

        <%= yield %>

        <div class="sidebar">
          <h3>Shortcuts</h3>
