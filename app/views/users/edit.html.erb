<%= tag.h1 "Edit Profile" %>

<%= image_tag(@user.pic_url, alt: "Profile Pic", size: "200x200") %>
<%= tag.h1 @user.name %>
<%= tag.h3 @user.email %>

<%= form_with(model: @user, local: true) do |f| %> 
    Edit Name:<%= f.text_field :name%>
    <%= f.submit :style => "display: none" %> 
<% end %><br>

<%= form_with(model: @user, local: true) do |f| %> 
    Edit Email:<%= f.text_field :email%>
    <%= f.submit :style => "display: none" %> 
<% end %><br>

<%= form_with(model: @user, local: true) do |f| %> 
    Edit Profile Pic URL:<%= f.text_field :pic_url%>
    <%= f.submit :style => "display: none" %> 
<% end %><br>

<%= form_with(model: @user, local: true) do |f| %> 
    Edit Password:<%= f.text_field :password%>
    <%= f.submit :style => "display: none" %> 
<% end %>