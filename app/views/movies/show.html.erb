<%= tag.hi tag.strong(@movie.title) %>

<%= tag.div class: "movie-post" do %>
  <%= tag.div class: "movie-image" do %>
    <%= link_to image_tag(@movie.image_url), @movie.link, target: "_blank" %>
  <% end %>
  <%= my_movies_button(@movie) %>
  <%= tag.div class: "movie-details" do %>
    <%= tag.ul do %>
      <%= tag.li tag.strong("Release Date: #{@movie.release_date}") %>
      <%= tag.li tag.strong("Stars: #{@movie.stars.gsub(/[^0-9a-z ]/i, '')}") %>
      <%= tag.li tag.strong("Rating: #{@movie.rating}") %>
      <%= tag.li tag.strong("Genres: #{@movie.genres.gsub(/[^0-9a-z ]/i, '')}") %>
      <%= tag.li tag.strong("Runtime: #{@movie.runtime}") %>
      <%= tag.li tag.strong("Summary: #{@movie.summary}") %>
      <%= trailer_link(@movie) %>
    <% end %>
  <% end %>
  <%= render partial: "comments/comment", collection: @movie.sorted_comments %>
  <%= render partial: "comments/form", locals: {movie: @movie} %>
<% end %>